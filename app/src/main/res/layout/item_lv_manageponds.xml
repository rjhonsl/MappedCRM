<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:padding="9dp"
              android:id="@+id/ll_item_weekLyReportWrapper"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content">

    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:gravity="center"

        >

        <LinearLayout android:layout_width="60"
                      android:id="@+id/weeknoHOlder"
                      android:background="@drawable/bg_amber_oval"
                      android:layout_height="60dp"
                      android:orientation="vertical"
                      android:gravity="center"
            >

            <TextView android:layout_width="wrap_content"
                      android:textColor="#FFFFFF"
                      android:layout_height="wrap_content"
                      android:id="@+id/itemlv_managempond_initials"
                      android:textSize="30sp"
                      android:text="T"
                      android:gravity="center"/>


        </LinearLayout>


            <LinearLayout android:layout_width="wrap_content"
                          android:padding="5dp"
                          android:layout_weight="1"
                          android:layout_marginLeft="2dp"
                          android:layout_height="wrap_content"
                          android:orientation="vertical">

                <LinearLayout android:layout_width="fill_parent"
                              android:padding="0dp"
                              android:layout_height="wrap_content"
                              android:paddingBottom="1dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/itemlv_managempond_Species"
                        android:layout_weight="1"
                        android:text="Tilapia, Bangus"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="#3a3a3a"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                </LinearLayout>


                <TextView
                    android:id="@+id/itemlv_weeklyreport_pondsummary_recommended"
                    android:text="Recommended:  12.5 kg"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:id="@+id/itemlv_weeklyreport_pondsummary_actual"
                    android:text="Actual:  N/A"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>

    </LinearLayout>





</LinearLayout>