<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_titlebar"
        android:background="#009688"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >

        <ImageButton
            android:layout_weight="1"
            android:background="@drawable/bg_material_transparent"
            android:src="@drawable/ic_keyboard_arrow_left_white_24dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Customer Information"
            android:gravity="center"
            android:id="@+id/title"
            android:textSize="19sp"
            android:layout_weight="12"
            android:textColor="@color/background_material_light"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <ImageButton
            android:layout_weight="1"
            android:background="@drawable/bg_material_transparent"
            android:src="@drawable/ic_filler24dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <ScrollView android:layout_width="fill_parent"
                android:layout_height="wrap_content">
        <LinearLayout android:layout_width="fill_parent"
                      android:layout_height="fill_parent"
                      android:orientation="vertical"
                      android:paddingLeft="10dp"
                      android:paddingRight="10dp"
            >
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="13sp"
                      android:textColor="@color/red_600"
                      android:text="NOTE: All data added cannot be erased once saved."
                      android:paddingLeft="7dp"
                      android:paddingRight="7dp"
                      android:paddingBottom="7dp"
                      android:paddingTop="7dp"
                />


            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="13sp"
                      android:textStyle="bold"
                      android:textColor="@color/gray_900"
                      android:text="BASIC INFORMATION"
                      android:paddingLeft="7dp"
                      android:paddingRight="7dp"
                      android:paddingTop="7dp"
                />


            <LinearLayout android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:paddingTop="1dp"
                          android:paddingBottom="7dp"
                          android:paddingRight="7dp"
                          android:paddingLeft="7dp"
                >

                <TextView android:layout_width="140dp"
                          android:layout_height="wrap_content"
                          android:textSize="14sp"
                          android:textColor="@color/gray_600"
                          android:text="Farm ID"
                    />

                <EditText android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:paddingTop="1dp"
                          android:id="@+id/edt_farmid"
                          android:inputType="textCapCharacters"
                    />

            </LinearLayout>

            <LinearLayout android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:padding="7dp">

                <TextView android:layout_width="140dp"
                          android:layout_height="wrap_content"
                          android:textSize="14sp"
                          android:textColor="@color/gray_600"
                          android:text="First Name"
                    />

                <EditText android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:id="@+id/edt_fname"
                          android:inputType="textCapWords"
                    />

            </LinearLayout>


            <LinearLayout android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:padding="7dp">

                <TextView android:layout_width="140dp"
                          android:layout_height="wrap_content"
                          android:textSize="14sp"
                          android:inputType="textCapWords"
                          android:textColor="@color/gray_600"
                          android:text="Middle Name"
                    />

                <EditText android:layout_width="fill_parent"
                          android:id="@+id/edtAbw"
                          android:inputType="number"
                          android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:padding="7dp">

                <TextView android:layout_width="140dp"
                          android:layout_height="wrap_content"
                          android:textSize="14sp"
                          android:textColor="@color/gray_600"
                          android:text="Last Name"
                    />

                <EditText android:layout_width="fill_parent"
                          android:id="@+id/edt_lname"
                          android:inputType="textCapWords"
                          android:layout_height="wrap_content"/>

            </LinearLayout>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="13sp"
                      android:textStyle="bold"
                      android:textColor="@color/gray_900"
                      android:text="ADDRESS"
                      android:paddingLeft="7dp"
                      android:paddingRight="7dp"
                      android:paddingTop="10dp"
                />


            <LinearLayout android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:paddingLeft="7dp"
                          android:paddingRight="7dp"
                          android:paddingTop="1dp"
                          android:paddingBottom="7dp"
                >

                <TextView android:layout_width="140dp"
                          android:layout_height="wrap_content"
                          android:textSize="14sp"
                          android:textColor="@color/gray_600"
                          android:text="House Number"
                    />

                <EditText android:layout_width="fill_parent"
                          android:id="@+id/edt_housenumber"
                          android:inputType="number"
                          android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:padding="7dp">

                <TextView android:layout_width="140dp"
                          android:layout_height="wrap_content"
                          android:textSize="14sp"
                          android:textColor="@color/gray_600"
                          android:text="Street"
                    />

                <EditText android:layout_width="fill_parent"
                          android:id="@+id/edt_street"
                          android:inputType="textCapWords"
                          android:layout_height="wrap_content"/>

            </LinearLayout>


            <LinearLayout android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:padding="7dp">

                <TextView android:layout_width="140dp"
                          android:layout_height="wrap_content"
                          android:textSize="14sp"
                          android:textColor="@color/gray_600"
                          android:text="Subdivision"
                    />


                <EditText android:layout_width="fill_parent"
                          android:id="@+id/edtArea"
                          android:inputType="textCapWords"
                          android:layout_height="wrap_content"/>

            </LinearLayout>


            <LinearLayout android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:padding="7dp">

                <TextView android:layout_width="140dp"
                          android:layout_height="wrap_content"
                          android:textSize="14sp"
                          android:textColor="@color/gray_600"
                          android:text="City"
                    />

                <EditText android:layout_width="fill_parent"
                          android:id="@+id/edt_city"
                          android:focusable="false"
                          android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:padding="7dp">

                <TextView android:layout_width="140dp"
                          android:layout_height="wrap_content"
                          android:textSize="14sp"
                          android:textColor="@color/gray_600"

                          android:text="Province"
                    />

                <EditText android:layout_width="fill_parent"
                          android:id="@+id/edt_province"
                          android:layout_height="wrap_content"/>

            </LinearLayout>


            <LinearLayout android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:gravity="right"
                          android:padding="7dp">

                <Button android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/btnSave"
                        android:textColor="@color/deepteal_500"
                        android:background="@drawable/bg_material_transparent"
                        android:text="SAVE"
                    />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>